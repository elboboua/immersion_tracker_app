{{> navbar public=true}}


<div id="prompt"><h3>Please set a username!</h3></div>
<div class="container">
    <div id="username-form">
        <div class="card text-center" id="username-box">
            <form id="username-form" method="GET" action="/account/update-username/">
                {{!-- // name of log --}}
                <div class="form-group">
                    <div id="submission-message" class="alert-danger message">{{message}}</div>
                    <div id="username-message" class="message">{{message}}</div>
                    <div id="loader"></div>
                    <input type="text" class="form-control" name="username" id="username-input" placeholder="set a username" required minlength="5" pattern="[a-zA-Z0-9]+" autocomplete="off">
                </div>  
                <button id="submit-button" type="submit" value="submit" class="btn btn-block form-group" style="background-color: #443266; color: white;" disabled>Submit</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/create_username_page.js"></script>