<link rel="stylesheet" href="/css/more-info.css" />

<div id="prompt"><h3>Sign up for #30DGLC updates</h3></div>
<div class="container">
  <div id="username-form">
    <div class="card text-center" id="resource-box">

      <form
        id="username-form"
        action="/challenge/30DGLC-sign-up"
        class="form-group"
        method="POST"
      >
        {{#if message}}
          <div
            id="username-message"
            class="alert alert-danger"
          >{{message}}</div>
        {{/if}}
        <label>Name</label>
        <input type="text" name="name" id="name-input" />
        <label>Email</label>
        <input type="text" name="email" id="email-input" />
        <input
          id="submit-button"
          class="btn btn-block form-group"
          style="background-color: #443266; color: white;"
          type="submit"
          value="Sign up!"
        />
      </form>
    </div>
  </div>
</div>